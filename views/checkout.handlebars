<section class="check">
    <div class="check__shipping">        
        <h2 class="check__title">Shipping details</h2>
         <form class="check__options">
            <label>
                Name
                <input class="check__name" type="text" placeholder="Your Name">
            </label>

            <label >
                Last name
                <input class="check__Lastname" type="text" placeholder="Your Last Name" >
            </label>

            <label >
                Country
                <input class="check__country" type="text" placeholder="Your country">
            </label>

            <label >
                Address
                <input class="check__add" type="text" placeholder="Your address">
            </label>

            <label >
                City
                <input class="check__city" type="text" placeholder="Your city">
            </label>

            <label >
                State
                <input class="check__state" type="text" placeholder="Your state">
            </label>

            <label >
                Zip
                <input class="check__zip" type="text" placeholder="+ Number">
            </label>
         </form>
    </div>

    <div class="check__payment">
        <h2 class="check__titlePay">Payment information</h2>

        <i class="fab fa-cc-mastercard"></i>
        <i class="fab fa-cc-visa"></i>
        <i class="fab fa-cc-discover"></i>
        <i class="fab fa-cc-diners-club"></i>
        <i class="fab fa-cc-amex"></i>

        <form class="check__options">
            <label>
                Cardholder's name
                <input class="check__cName" type="text" placeholder="Name on card">
            </label>

            <label>
                Card No.
                <input class="check__no" type="password" placeholder="•••• •••• •••• ••••">
            </label>

            <label>
                Expiry date
                <input class="check__exp" type="text" placeholder="MM/YY">
            </label>

            <label>
                CVC
                <input class="check__cvc" type="text" placeholder="Enter 3 digits">
            </label>
        </form>
    </div>

    <div>
        <button class="check__btn">Send</button>
    </div>
</section>